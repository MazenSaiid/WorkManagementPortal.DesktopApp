<Window x:Class="WorkTrackerWPFApp.ForgotPassword" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="ForgotPassword" 
        Width="600" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow" 
        ShowInTaskbar="True">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

            <!-- Forgot Password Header -->
            <Label Content="Forgot Your Password?" 
               FontSize="28" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               Foreground="#0056b3" 
               VerticalAlignment="Top" 
               Margin="0,0,0,20"/>

            <!-- Email Label -->
            <Label Content="Enter your email address:" 
               FontSize="16" 
               Foreground="#333333" 
               Margin="0,5" />

            <!-- Email Entry -->
            <TextBox x:Name="EmailTextBox" 
                 Width="350" 
                 Height="40" 
                 Foreground="#333333" 
                 FontSize="16" 
                 Padding="10,5" 
                 HorizontalAlignment="Center" />
            <!-- Error Message TextBlock -->
            <TextBlock x:Name="ErrorMessageTextBlock"
                   Foreground="Red"
                   FontSize="14"
                   Visibility="Collapsed"
                   Margin="0,10,0,0"/>

            <!-- Success Message TextBlock -->
            <TextBlock x:Name="SuccessMessageTextBlock"
       Foreground="Green"
       FontSize="14"
       Visibility="Collapsed"
       Margin="0,10,0,0"/>

            <!-- Submit Button -->
            <Button x:Name="SubmitButton" 
                Content="Submit" 
                Width="350" 
                Height="50" 
                Background="#0056b3" 
                Foreground="White" 
                FontSize="18" 
                Margin="0,20,0,10" 
                Click="OnSubmitClicked"/>

            <!-- Back to Login Button -->
            <Button x:Name="BackToLoginButton" 
                Content="Back to Login" 
                Width="350" 
                Height="40" 
                Background="Transparent" 
                Foreground="#0056b3" 
                FontSize="16" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,20" 
                Click="OnBackToLoginClicked"/>
        </StackPanel>
    </Grid>
</Window>
